	<div id="booking" class="section">
		<div class="section-center mt-5">
			<div>
				<div class="container mt-5">
					<div class="row">
						<div class="col-md-4">
							<div class="booking-cta">
								<h1>Book your flight today</h1>
								<p>A mile of highway will take you a mile. A mile of runway will take you anywhere!</p>
							</div>
						</div>
						<div class="col-md-7 col-md-offset-1">
							<div class="booking-form">
								<form method="POST" action="/planelist">
									<div class="form-group">
										<div class="form-checkbox">
											<label for="roundtrip">
												<input type="radio" id="roundtrip" name="flightType" value="Round Trip" onclick="setArrow(this.value)" required>
												<span></span>Roundtrip
											</label>
											<label for="one-way">
												<input type="radio" id="one-way" name="flightType" value="One Way" onclick="setArrow(this.value)" required>
												<span></span>One way
											</label>
											<label for="multi-city">
												<input type="radio" id="multi-city" name="flightType" value="Multi City" onclick="setArrow(this.value)" required>
												<span></span>Multi-City
											</label>
										</div>
									</div>
									<div id="place">
										<div class="row" id="entrySection_1">
											<div class="col-md-6" id="from">
												<div class="form-group">
													<span class="form-label">Flying from</span>
													<input class="form-control" type="text" name="from" placeholder="City or airport">
												</div>
											</div>
											
											<img class="arrow" id="ra" src="images/right-arrow.png" alt="arrow"/>
											<img class="arrow" id="lra" src="images/transfer.png" alt="arrow" style="display: none;"/>
											<div class="col-md-5" id="to">
												<div class="form-group">
													<span class="form-label">Flyning to</span>
													<input class="form-control" id="to1" type="text" name="to" placeholder="City or airport" onchange="makePlaceSame(this.id)">
												</div>
											</div>

											<!-- for multi-city travel only -->
											<div class="col-md-3" style="display: none;" id="multi-city-dep">
												<div class="form-group">
													<span class="form-label">Departing</span>
													<input class="form-control" type="date" id="mcdep" name="depart" required disabled>
												</div>
											</div>
										</div>
										<div id="extra-city">
										</div>
									</div>
									<div class="row add-place" id="add-place" style="display: none;">
										<button type="button" class="col-md-11 ml-4" id="add" onclick="addPlace()">Add Another Place</button>
									</div>
									<div class="row" id="timings">
										<div class="col-md-6">
											<div class="form-group">
												<span class="form-label">Departing</span>
												<input class="form-control" type="date" id="odep" name="depart" required disabled>
											</div>
										</div>
										<div class="col-md-6">
											<div class="form-group">
												<span class="form-label">Returning</span>
												<input class="form-control" id="return" type="date" name="return" required disabled>
											</div>
										</div>
									</div>
									<div class="row">
										<div class="col-md-4">
											<div class="form-group">
												<span class="form-label">Adults (18+)</span>
												<input class="form-control" id="" type="number" name="adult" value="1" min="1" required>
											</div>
										</div>
										<div class="col-md-4">
											<div class="form-group">
												<span class="form-label">Children (0-17)</span>
												<input class="form-control" id="" type="number" name="child" value="0" min="0" required>
												<span class="select-arrow"></span>
											</div>
										</div>
										<div class="col-md-4">
											<div class="form-group">
												<span class="form-label">Travel class</span>
												<select class="form-control" name="class">
													<option>Economy</option>
													<option>Business</option>
													<option>First</option>
												</select>
												<span class="select-arrow"></span>
											</div>
										</div>
									</div>
									<div class="form-btn">
										<input  class="submit-btn" type="submit" value="Show flights">
									</div>
								</form>
							</div>
						</div>
