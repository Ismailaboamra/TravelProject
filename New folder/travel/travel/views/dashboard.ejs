	<script>
		function getDate(){
			var utc = new Date().toISOString().slice(0, 10);
			return utc;
		}
		var date = getDate();
		var datebox = document.getElementById("mcdep");
        datebox.setAttribute("min", date);
		var datebox = document.getElementById("odep");
        datebox.setAttribute("min", date);
		var datebox = document.getElementById("return");
        datebox.setAttribute("min", date);
		var radioOption="";
		function setArrow(val){
			var collection = document.getElementsByClassName("arrow");
			collection[0].style.display="none";
			collection[1].style.display="none";
			document.getElementById('add-place').style.display="none";
			document.getElementById('extra-city').style.display="none";
			document.getElementById('extra-city').innerHTML="";
			document.getElementById('return').disabled=false;
			document.getElementById('timings').style.display="block";
			document.getElementById("from").className="col-md-6";
			document.getElementById("to").className="col-md-5";
			document.getElementById("multi-city-dep").style.display="none";
			document.getElementById("mcdep").disabled=true;
			document.getElementById("odep").disabled=false;
			radioOption="";
			if(val=="Round Trip"){
				document.getElementById('lra').style["display"]="block";
			}
			if(val=="One Way"){
				document.getElementById('ra').style["display"]="block";
				document.getElementById('return').disabled=true;
			}
			if(val=="Multi City"){
				document.getElementById('ra').style["display"]="block";
				document.getElementById('add-place').style.display="block";
				document.getElementById('timings').style.display="none";
				document.getElementById("from").className="col-md-4";
				document.getElementById("to").className="col-md-4";
				document.getElementById("multi-city-dep").style.display="block";
				document.getElementById("mcdep").disabled=false;
				document.getElementById("odep").disabled=true;
				document.getElementById('return').disabled=true;
				radioOption=val;
			}
		}
		var count=1;
		var to_id=1;
		function addPlace() {
			count+=1
			document.getElementById('extra-city').style.display="block";
			var card = document.createElement("div");
			card.innerHTML =`<div class="row" id="entrySection_`+count+`">
								<div class="col-md-4">
									<div class="form-group">
										<span class="form-label">Flying from</span>
										<input class="form-control" type="text" name="from" id="to`+to_id+`1" placeholder="City or airport">
									</div>
								</div>
								
								<img class="arrow" id="ra" src="images/right-arrow.png" alt="arrow"/>
								<img class="arrow" id="lra" src="images/transfer.png" alt="arrow" style="display: none;"/>
								<div class="col-md-4">
									<div class="form-group">
										<span class="form-label">Flyning to</span>
										<input class="form-control" type="text" name="to" id="to`+(to_id+1)+`" placeholder="City or airport" onchange="makePlaceSame(this.id)">
									</div>
								</div>
								<div class="col-md-3">
									<div class="form-group">
										<span class="form-label">Departing</span>
										<input class="form-control" type="date" id="mcdep`+(to_id+1)+`" name="depart" required>
									</div>
								</div>
							</div>`;
			var element = document.getElementById("extra-city");
			element.appendChild(card);
			to_id+=1;
			
			var datebox = document.getElementById("mcdep"+to_id);
				datebox.setAttribute("min", date);
		}

		function makePlaceSame(id){
			if(radioOption=="Multi City"){
				var value = document.getElementById(id).value;
				if(document.getElementById(id+"1")!=null)
					document.getElementById(id+"1").value=value;
			}
		}
	</script>
